{
  "name": "lost-items-frontend",
  "version": "1.0.0",
  "description": "拾得物管理システム",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "jeong lab",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "build-exe": "npm run build && electron-builder --win portable --publish=never",
    "build-portable": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable --publish=never"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "axios": "^1.4.0",
    "concurrently": "^8.0.0",
    "python-shell": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.lostitems.desktop",
    "productName": "Lost Items Management System",
    "directories": {
      "output": "dist"
    },
    "forceCodeSigning": false,
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*",
      "app/**",
      "public/item_classification.json"
    ],
    "extraResources": [
      {
        "from": "../app",
        "to": "app"
      },
      {
        "from": "../backend",
        "to": "backend"
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../backend/yolov8n.pt",
        "to": "yolov8n.pt"
      },
      {
        "from": "../docs",
        "to": "docs"
      },
      {
        "from": "./build",
        "to": "build"
      },
      {
        "from": "../venv/Lib/site-packages",
        "to": "app/vendor"
      },
      {
        "from": "public/item_classification.json",
        "to": "app/item_classification.json"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
